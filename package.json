{
  "name": "emr-developer-cortex",
  "displayName": "EMR Developer Cortex",
  "description": "Gerenciador de prompts AI.",
  "version": "0.0.1",
  "publisher": "extensao-cortex",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:emrDeveloperCortexViewer",
    "onCommand:emrDeveloperCortexViewer.refresh",
    "onCommand:emrDeveloperCortexViewer.manageConfiguration",
    "onCommand:emrDeveloperCortexViewer.configureToken",
    "onCommand:emrDeveloperCortexViewer.viewRepositories"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "emrDeveloperCortexViewer",
          "name": "EMR Developer Cortex"
        }
      ]
    },
    "commands": [
      {
        "command": "emrDeveloperCortexViewer.refresh",
        "title": "EMR Developer Cortex: Refresh"
      },
      {
        "command": "emrDeveloperCortexViewer.manageConfiguration",
        "title": "EMR Developer Cortex: Configurar Repositórios"
      },
      {
        "command": "emrDeveloperCortexViewer.configureToken",
        "title": "EMR Developer Cortex: Configurar Pasta Base"
      },
      {
        "command": "emrDeveloperCortexViewer.viewRepositories",
        "title": "EMR Developer Cortex: Configurar Diretório de Download"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "emrDeveloperCortexViewer.previewFile",
          "when": "view == emrDeveloperCortexViewer && viewItem == file",
          "group": "inline"
        },
        {
          "command": "emrDeveloperCortexViewer.downloadFile",
          "when": "view == emrDeveloperCortexViewer && viewItem == file",
          "group": "inline"
        },
        {
          "command": "emrDeveloperCortexViewer.downloadPlugin",
          "when": "view == emrDeveloperCortexViewer && viewItem == plugin",
          "group": "inline"
        },
        {
          "command": "emrDeveloperCortexViewer.refresh",
          "when": "view == emrDeveloperCortexViewer",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "EMR Developer Cortex",
      "properties": {
        "cortex.repositories": {
          "type": "array",
          "default": [],
          "description": "Lista de repositórios configurados",
          "items": {
            "type": "object",
            "properties": {
              "domain": {
                "type": "string"
              },
              "owner": {
                "type": "string"
              },
              "repo": {
                "type": "string"
              },
              "token": {
                "type": "string"
              },
              "label": {
                "type": "string"
              },
              "path": {
                "type": "string"
              }
            },
            "required": [
              "owner",
              "repo"
            ]
          }
        },
        "emrDeveloperCortexViewer.defaultBasePath": {
          "type": "string",
          "default": "eng",
          "description": "Pasta base padrão para listagem."
        },
        "emrDeveloperCortexViewer.defaultDownloadPath": {
          "type": "string",
          "default": "./downloads",
          "description": "Diretório padrão para download."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npx jest test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.0",
    "axios": "^1.13.2",
    "js-yaml": "^4.1.0"
  }
}
